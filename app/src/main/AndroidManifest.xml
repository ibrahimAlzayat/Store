<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.store">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".HomeActivity" />
        <activity
            android:name=".ShowActivity"
            android:parentActivityName=".MyCompany" />
        <activity
            android:name=".CreateProduct"
            android:label="@string/title_activity_create_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateProduct"
            android:label="@string/title_activity_create_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyCompany"
            android:label="@string/title_activity_my_company"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SigningActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>